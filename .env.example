# ========================================
# SCHOOL LLM - API CONFIGURATION
# ========================================
# Copy this file to .env and fill in your actual API keys

# Ollama (local LLM)
# Install Ollama and pull a model, e.g. `ollama pull llama3.1:8b`
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=llama3.1:8b
OLLAMA_TEMPERATURE=0.3
OLLAMA_NUM_PREDICT=800
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Embeddings Provider (sentence_transformers | ollama)
EMBEDDINGS_PROVIDER=sentence_transformers

# MongoDB Connection String (Required)
# For local MongoDB: mongodb://localhost:27017/school_llm
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/school_llm
MONGODB_URI=mongodb://localhost:27017/school_llm

# Local Embeddings
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated URLs allowed to access the API)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5500
